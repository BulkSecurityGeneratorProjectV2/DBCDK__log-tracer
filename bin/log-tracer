log_tracer_home="$HOME/.log-tracer"
log_tracer_archive="${log_tracer_home}/archive"
log_tracer_bin="${log_tracer_home}/bin"

case "$1" in
    selfupdate)
    ${log_tracer_bin}/install.sh
    ;;
    *)
    java -jar ${log_tracer_archive}/log-tracer-current.jar ${LOG_TRACER_OPTS} "$@"
    ;;
esac
